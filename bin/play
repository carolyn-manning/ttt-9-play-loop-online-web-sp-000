#!/usr/bin/env ruby

require_relative "../lib/play"

puts "Welcome to Tic Tac Toe!"
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
display_board(board)

puts "Where would you like to go?"
input = gets.strip
index = input_to_index(input)

move(board, index)

display_board(board)

# Make sure to execute #play below
 play(board)
